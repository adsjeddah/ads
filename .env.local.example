# Firebase Client SDK Configuration (for lib/firebase.ts)
# Get these from your Firebase project settings > Your apps > Web app config

# API URL Configuration
# For local development and production, use the relative path /api
# This will automatically use the correct domain (localhost:3000 in dev, your-domain.com in production)
NEXT_PUBLIC_API_URL=/api

NEXT_PUBLIC_FIREBASE_API_KEY="YOUR_WEB_API_KEY"
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN="YOUR_PROJECT_ID.firebaseapp.com"
NEXT_PUBLIC_FIREBASE_PROJECT_ID="YOUR_PROJECT_ID"
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET="YOUR_PROJECT_ID.appspot.com"
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID="YOUR_MESSAGING_SENDER_ID"
NEXT_PUBLIC_FIREBASE_APP_ID="YOUR_WEB_APP_ID"

# Firebase Admin SDK Configuration (for lib/firebase-admin.ts)
# Get these from your Firebase project settings > Service accounts > Generate new private key (JSON file)
FIREBASE_PROJECT_ID="YOUR_PROJECT_ID"
FIREBASE_CLIENT_EMAIL="your-service-account-client-email@YOUR_PROJECT_ID.iam.gserviceaccount.com"
# For FIREBASE_PRIVATE_KEY, copy the entire private key string from the JSON file.
# Ensure newlines (\n) are preserved. If deploying to Vercel, you might need to Base64 encode this.
# For local development, you can often paste it directly, ensuring it's enclosed in quotes.
# Example: "----BEGIN PRIVATE KEY-----\nYOUR_KEY_LINES_HERE\n-----END PRIVATE KEY-----\n"
FIREBASE_PRIVATE_KEY="YOUR_SERVICE_ACCOUNT_PRIVATE_KEY"
# FIREBASE_STORAGE_BUCKET is the same as NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET, but used by admin SDK sometimes.
# Not strictly required if already initialized in firebase-admin.ts with client-side bucket, but good to have.
# FIREBASE_STORAGE_BUCKET="YOUR_PROJECT_ID.appspot.com"


# (Optional) Secret for one-time admin setup endpoint (pages/api/auth/setup-admin.ts)
# ADMIN_SETUP_SECRET="YOUR_STRONG_RANDOM_SECRET_KEY_FOR_ADMIN_SETUP"

# Next.js specific (if any)
# Example: NEXTAUTH_URL=http://localhost:3000 (if using NextAuth, not relevant here)